<rxui:ReactiveWindow x:Class="WpfReactiveUIValidation.MainWindow"
        x:TypeArguments="local:EmptyViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfReactiveUIValidation"
        xmlns:rxui="http://reactiveui.net"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Name: " FontWeight="Bold" />
            <TextBox x:Name="NameTextBox" />
            <TextBlock x:Name="NameErrors" />
            <Label Content="Address: " FontWeight="Bold" />
            <TextBox x:Name="AddressTextBox" />
            <TextBlock x:Name="AddressErrors" />
            <Separator />
            <TextBlock x:Name="AllErrors" /> 
            <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</rxui:ReactiveWindow>
